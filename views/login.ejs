<%- include('partials/head', { title: 'Login' }) %>


<div class="max-w-xl mx-auto p-6">
<div class="bg-card p-8 rounded-2xl shadow-md">
<h1 class="text-2xl font-semibold mb-4">Sign in to Cinema</h1>


<!-- Google Login -->
<a href="/auth/google" class="w-full inline-flex items-center justify-center mb-4 px-4 py-2 rounded-lg border border-gray-700 hover:bg-gray-800">
<img src="https://www.svgrepo.com/show/355037/google.svg" class="w-5 h-5 mr-3" alt="Google" />
<span>Continue with Google</span>
</a>


<div class="text-center text-sm text-soft my-3">or</div>


<!-- Manual Login Form -->
<form action="/auth/local-login" method="POST" class="space-y-4">
<div>
<label class="block text-sm text-gray-300">Email</label>
<input name="email" type="email" required class="w-full mt-1 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:outline-none" />
</div>
<div>
<label class="block text-sm text-gray-300">Password</label>
<input name="password" type="password" required class="w-full mt-1 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:outline-none" />
</div>
<button type="submit" class="w-full py-3 rounded-lg bg-gradient-to-r from-gray-700 to-gray-600 hover:from-gray-600">Sign In</button>
</form>


<p class="mt-4 text-sm text-gray-400">Don't have an account? <a href="/register" class="text-gray-200 underline">Register</a></p>


<div class="mt-6 flex justify-between items-center">
<label class="flex items-center gap-2 text-sm text-gray-300">
<input id="themeToggle" type="checkbox" class="w-4 h-4" />
Night Mode
</label>
</div>
</div>
</div>


<%- include('partials/footer') %>