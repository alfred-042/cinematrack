<%- include('partials/head', { title: 'Register' }) %>


<div class="max-w-xl mx-auto p-6">
<div class="bg-card p-8 rounded-2xl shadow-md">
<h1 class="text-2xl font-semibold mb-4">Create account</h1>


<form action="/auth/local-register" method="POST" class="space-y-4">
<div>
<label class="block text-sm text-gray-300">Full name</label>
<input name="name" type="text" required class="w-full mt-1 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700" />
</div>
<div>
<label class="block text-sm text-gray-300">Email</label>
<input name="email" type="email" required class="w-full mt-1 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700" />
</div>
<div>
<label class="block text-sm text-gray-300">Password</label>
<input name="password" type="password" required class="w-full mt-1 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700" />
</div>
<button type="submit" class="w-full py-3 rounded-lg bg-gradient-to-r from-gray-700 to-gray-600">Create Account</button>
</form>


<p class="mt-4 text-sm text-gray-400">Already have an account? <a href="/login" class="text-gray-200 underline">Sign in</a></p>
</div>
</div>


<%- include('partials/footer') %>